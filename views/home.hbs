<section id="sectionInicio">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 offset-md-4 viaja">
                <h1><b>Viaja !</b></h1>
                <h3>Descubre lugares maravillosos</h3>
                <a href="#sectionDestinos" class="btn btn-warning btn-lg">Ver destinos</a>
            </div>
        </div>
    </div>

</section>

<section id="sectionDestinos">
{{#if destinos.length}}

    <section id="desktop">
        <div class="container">
            <div class="row mb-3 mt-3">
                {{#each destinos}}
                <div class="col-lg-4 col-md-4 mb-3">
                    <div class="hovereffect">
                        <img class="img-fluid" src="{{imagen}}" alt="{{nombre_viaje}}">
                        <div class="overlay">
                            <h2>{{nombre_viaje}} desde <strong>{{precio}} €</strong></h2>
                            <button type="button" class="btn btn-outline-light mt-5" data-toggle="modal" data-target="#viajeModal'{{id}}'">
                                Más detalles del viaje
                            </button>
                            <br>
                            <button type="button" class="btn btn-outline-warning mt-4" onclick='window.location.assign("/compra/comprar/{{id}}")'>Reservar</button>
                        </div>
                    </div>
                </div>
                    <!-- Modal destino -->
                    <div class="modal fade" id="viajeModal'{{id}}'" tabindex="-1" role="dialog" aria-labelledby="viajeModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header cabFotMod">
                                    <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-suitcase"></i> Viaje a {{nombre_viaje}}</h5>
                                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="d-flex flex-row">
                                        <div class="p-2">
                                            <div class="card cardModal" style="width: 17rem;">
                                                <img class="card-img-top" src="{{imagen}}" alt="{{nombre_viaje}}">
                                                <div class="card-body">
                                                    <p class="card-text"><strong>Descripcion:</strong><br>{{descripcion}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="p-2">
                                            <p><strong>Fecha de salida:</strong><br>{{fechas}}</p>
                                            <p><strong>Precio:</strong><br>{{precio}} €</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer cabFotMod">
                                    <button type="button" class="btn btn-warning" onclick='window.location.assign("/compra/comprar/{{id}}")'>Reservar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- fin modal destino -->


                {{/each}}
            </div>
        </div>
    </section>

{{/if}}


{{#if destinos.length}}
<section id="mobile">
    <div class="container-fluid">
        <div class="row mb-3 mt-3">
            <div class="col" id="test">
                <div id="carrusel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-inner">
                            {{#each destinos}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                    <img class="d-block w-100" src="{{imagen}}" alt="{{nombre_viaje}}">
                                    <div class="carousel-caption">
                                        <h3 class="display-4">Save 90$</h3>
                                        <p class="lead">
                                            <a class="btn btn-primary btn-lg" href="#" role="button">Buy now</a>
                                        </p>
                                    </div>

                                </div>
                            {{/each}}
                        </div>

                    </div>
                    <a id="control_dch" class="carousel-control-prev" href="#carrusel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a id="control_izq" class="carousel-control-next" href="#carrusel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

{{/if}}

</section>

<section>
    <div class="container-fluid" id="somos">
        <div class ="row">
            <div class="col-10 col-sm-4 offset-1" id="quienes_somos">
                <h1>Quienes somos</h1>
                <hr>
                <p><i>GeeksHubs Travels es una agencia de viajes online creada e 2009 por un equipo de profecionales y entusiastas que deciden hacer de su pasión por conocer el mundo para 2018 seremos la agencia de viajes preferida por nuestros clientes por seguridad y conpromiso de nuestro personal.</i></p>
            </div>
        </div>
    </div>

</section>

